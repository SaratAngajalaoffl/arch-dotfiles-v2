{
    "hyprland/workspaces": {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent_workspaces": {
            "*": 5
        }
    },
    "clock": {
        "format": "{:%a, %d %b, %I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "~/.config/waybar/scripts/toggle_calendar.sh"
    },
    "cava": {
        "framerate": 30,
        "autosens": 1,
        "sensitivity": 100,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "hide_on_silence": false,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
        "actions": {
            "on-click-right": "mode"
        }
    },
    "custom/playback": {
        "exec": "~/.config/waybar/scripts/current_playback.sh",
        "return-type": "json",
        "interval": 1,
        "format": "{icon} {text}",
        "tooltip": false,
        "on-click": "playerctl play-pause",
        "format-icons": {
            "playing": "",
            "paused": "",    
            "stopped": ""
        }
    },
    "custom/bluetooth": {
        "exec": "~/.config/waybar/scripts/bluetooth_data.sh",
        "return-type": "json",
        "interval": 1,
        "format": " {text}",
        "tooltip": true,
        "on-click": "kitty --class bluetui -o remember_window_size=no --detach --start-as=fullscreen --single-instance --instance-group=bluetui sh -c 'bluetui || sleep 2'"
    },
    "custom/lock": {
        "format": "",
        "tooltip-format": "Lock",
        "tooltip": true,
        "on-click": "hyprlock"
    },
    "custom/shutdown": {
        "format": "",
        "tooltip-format": "Shutdown",
        "tooltip": true,
        "on-click": "shutdown now"
    },
    "custom/reboot": {
        "format": "",
        "tooltip-format": "Reboot",
        "tooltip": true,
        "on-click": "reboot"
    }
}
