[global]
    # Monitor settings
    monitor = 1
    follow = none

    # dimensions
    width = (300, 500)
    height = (0, 300)

    # Position
    origin = top-right
    offset = (10,10)

    # Click Behaviour
    mouse_left_click=do_action, remove_current
    mouse_right_click=close_current
    mouse_middle_click=close_all

    # Appearance
    separator_height = 10 # will be ignored since gap_size is set
    padding = 8
    frame_width = 2
    gap_size = 4
    corner_radius = 10

    font = "FiraCode Nerd Font" 12
    line_height = 4

    vertical_alignment = center

    stack_duplicates = false

    scale = 0 # doesn't work on wayland

    enable_posix_regex = true

    notification_limit = 5

